<!DOCTYPE html>
<html>
  <head>
    <title>Picnix</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to 'Picnix', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'See all courses', courses_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav float-right">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Students</a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% if user_signed_in? %> 
                  <%= link_to 'My Dashboard', dashboard_path, class: 'dropdown-item' %>         
                  <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
                  <% else %>
                  <%= link_to 'Log in', new_user_session_path, class: 'dropdown-item' %>
                  <%= link_to 'Sign up', new_user_registration_path, class: 'dropdown-item' %>
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to 'About', '#', class: 'dropdown-item' %>
                </div>
              </li>
          </ul>
        </div>
      </nav>
      
      <div class="container">
        <% if notice.present? %>
          <br />
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <br />
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      </div>


      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>Teachers</b>
            <br />
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br />
            <%= link_to 'My Dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br />
            <%= link_to 'Team', '#' %>
            <br />
            <%= link_to 'Careers', '#' %>
            <br />
            <%= link_to 'Privacy Policy', '#' %>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br />
            ken@thefirehoseproject.com
            <br />
            One Kendall Square
            <br />
            Cambridge MA, 02113
          </div>
          <div class="col-12 col-sm-3">
            <b>Social</b>
            <br />
            <br />
            <%= link_to 'https://github.com/CharlieTyler' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <span class="fa fa-facebook-square fa-2x social-button"></span>
            <span class="fa fa-twitter-square fa-2x social-button"></span>
          </div>
        </div>
      </div>
    </div>
    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
